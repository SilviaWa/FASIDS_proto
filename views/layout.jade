        a.navbar-brand(href='#')
          h5 FASIDS
      .navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li(class='#{(activePage=="Home")?"active ":""}')
            // Home
            a(href='/' ) Home
          // menu home li end here
          li.dropdown
            a.dropdown-toggle(href='#', class="", data-toggle="dropdown")
              | INTERACTIVE LANDSCAPE
              i.fa.fa-angle-down
