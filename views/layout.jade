          // menu pages li end here
          li.dropdown(class='#{(activePage=="Questions")?"active":null}')
            a(href='/qa') Q &amp; A
          // menu Shop li end here
          if (!isAuthenticated)
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-lock
                |  Sign In
              .dropdown-menu.dropdown-menu-right.dropdown-login-box.animated.fadeInUp
                form(role='form', action='/users/signin', method='post')
                  h4 Signin
                  .form-group
                    .input-group
                      span.input-group-addon
                        i.fa.fa-user
                      input.form-control(type='text',name='email', placeholder='Email')
                    br
                    .input-group
                      span.input-group-addon
                        i.fa.fa-lock
                      input.form-control(type='password',name='password', placeholder='Password')
                    .checkbox.pull-left
                      label
                        input(type='checkbox', name='remember')
                        |  Remember me
                    //-a.btn.btn-theme-bg.pull-right Login
                    button.btn.btn-theme.pull-right(type='submit') Login
                    .clearfix
                    hr
                    p
                      | Don't have an account! 
                      a(href='/users/signup') Register Now
          else
            li.dropdown
              a.dropdown-toggle(href="#", data-toggle='dropdown') 
                | #{user.first_name}
                i.fa.fa-angle-down
              ul.dropdown-menu(role='menu')
                li
                  a(href='#') User dashboard
                li
                  a(href='#') option2
                li
                  a(href='/users/logout') Log out



  

          // menu login li end here
