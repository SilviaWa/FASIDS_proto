extends ../layout
block additionalCSS
  link(href='/css/users/dashboard.css', rel='stylesheet', type='text/css', media='screen')    

block renderBody
  // following .container is just for subnav container
  .subnav-container
    .container
      .row
        .col-xs-12.subnav
          ul.list-inline
            li
              a(href="#") Dashboard
            li 
              a(href="#") Inbox
            li 
              a(href="#") Your Geojson Polygons
            li 
              a(href="#") Account
  .container
    .row
      .col-xs-3 Polygon Id
      .col-xs-3 Polygon Address
      .col-xs-2 Operation
    
    each db_polygon , index in polygons 
      .row
        .col-xs-3=db_polygon._id
        .col-xs-3 Polygon Address
        .col-xs-1
          a(href="/landscape/homeownermng/#{db_polygon._id}") Edit
        .col-xs-1
          a.http-action-link(href="/landscape/homeownermng/#{db_polygon._id}", data-http-method="delete" ) Delete
  .hidden
    form.http-action-form


  
block additionalJS
  script(src="/js/users/dashboard.js" )