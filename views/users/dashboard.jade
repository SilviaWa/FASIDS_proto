extends ../layout
block additionalCSS
  link(href='/css/users/dashboard.css', rel='stylesheet', type='text/css', media='screen')    

block renderBody
  // following .container is just for subnav container
  -var active_section = "dashboard"
  .subnav-container
    .container
      .row
        .col-xs-12.subnav
          ul.list-inline
            li(class="#{active_section==='dashboard'?'active':''}")
              a(href="#") Dashboard
            li(class="#{active_section==='inbox'?'active':''}")
              a(href="#") Inbox
            li(class="#{active_section==='geojson_polygons'?'active':''}") 
              a(href="#") Your Geojson Polygons
            li(class="#{active_section==='account'?'active':''}")
              a(href="#") Account
  .container
    //- .row
    //-   .col-xs-3 Polygon Id
    //-   .col-xs-3 Polygon Address
    //-   .col-xs-2 Operation
    
    //- each db_polygon , index in polygons 
    //-   .row
    //-     .col-xs-3=db_polygon._id
    //-     .col-xs-3 Polygon Address
    //-     .col-xs-1
    //-       a(href="/landscape/homeownermng/#{db_polygon._id}") Edit
    //-     .col-xs-1
    //-       a.http-action-link(href="/landscape/homeownermng/#{db_polygon._id}", data-http-method="delete" ) Delete
    .divide30
    .row
      .col-md-3
        .panel.panel-default
          .row
            .col-xs-12
              a.thumbnail(href='#')
                img(data-src='holder.js/100%x180', alt='100%x180', src='data:image/svg+xml;base64,', data-holder-rendered='true', style='height: 180px; width: 110%; display: block;')


          .panel-body.text-center
            h4=user.display_name
            p
              a(href="#") View Account
              br
              a(href="#") Edit Account



      .col-md-9
        .panel.panel-default
          .panel-heading
            | Notifications
            span.badge 0
          .panel-body
            .row
              .col-xs-12
                | you currently have 0 nitification.
        .panel.panel-default
          .panel-heading
            | Message
            span.badge 0
          .panel-body
            .row
              .col-xs-12
                | When you message hosts or send reservation requests, you'll see their response here.
        .panel.panel-default
          .panel-heading
            | Geojson Polygons
            span.badge=polygons.length
          .panel-body

            each db_polygon , index in polygons 
              .row.polygon-row-dashboard
                .col-xs-3.polygon-preview Preview Pic here
                .col-xs-4=db_polygon.properties.polygon_name?db_polygon.properties.polygon_name:"No Available Name yet"
                .col-xs-5.text-right.polygon-operations
                  a(href="/landscape/homeownermng/#{db_polygon._id}")
                    span.fa.fa-map-o.fa-lg
                    | &nbsp; Edit

                  a.http-action-link(href="/landscape/homeownermng/#{db_polygon._id}", data-http-method="delete" ) 
                    span.fa.fa-remove.fa-lg
                    | &nbsp; Delete
              .divide20



  .hidden
    form.http-action-form


  
block additionalJS
  script(src="/js/users/dashboard.js" )